<div class='col-lg-6 offset-lg-3 offset-2 space'>
  <div class='row'>
    <h2>新規会員登録</h2>
  </div>

  <div class='row'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>


    <div class='form-group row space'>
      <div class='col-lg-4'>
        <h5><%= f.label :名前 %></h5>
      </div>
      <div class='col-lg-8'>
        <div class="row">
          <div class="col-lg-6">
            (姓)<%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="col-lg-6">
            (名)<%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :フリガナ %></h5>
      </div>
      <div class='col-lg-8'>
        <div class="row">
          <div class="col-lg-6">
            (セイ)<%= f.text_field :last_name_kana, class: 'form-control' %>
          </div>
          <div class="col-lg-6">
            (メイ)<%= f.text_field :first_name_kana, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :メールアドレス %></h5>
      </div>
      <div class='col-lg-8'>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :郵便番号（ハイフンなし） %></h5>
      </div>
      <div class='col-lg-8'>
        <%= f.text_field :postal_code, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :住所 %></h5>
      </div>
      <div class='col-lg-8'>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :電話番号（ハイフンなし） %></h5>
      </div>
      <div class='col-lg-8'>
        <%= f.text_field :telephone_number, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :パスワード（６文字以上） %></h5>
      </div>
      <div class='col-lg-8'>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :パスワード確認用 %></h5>
      </div>
      <div class='col-lg-8'>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class='action w-25 offset-lg-6 space'>
      <%= f.submit '新規登録', class:'btn btn-danger' %>
    </div>

    <% end %>
  </div>

  <div class="space">
    <h4>すでに登録済みの方</h4>
    <h5><%= link_to 'こちら', new_customer_session_path  %>からログインしてください</h5>
  </div>
</div>
