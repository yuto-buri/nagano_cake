<div class="container">
  <div class="row">
    <div>
      <h2>注文履歴詳細</h2>
    </div>
  </div>

  <div class= "col-xs-7">
    <div>

      <div class="row">
        <strong>注文情報</strong>
      </div>

      <div class="row">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
            </tr>

            <tr>
              <td>配送先</td>
              <td>
                <%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>

            <tr>
              <td>支払い方法</td>
              <td><%= @order.payment_i18n %></td>
            </tr>

            <tr>
              <td>ステータス</td>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    </div>

    <div class= "col-xs-3 col-xs-offset-1">
      <div class="row">
        <strong>請求情報</strong>
      </div>

      <div class="row">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= @order.total_price  %></td>
            </tr>

            <tr>
              <td>配送料</td>
              <td><%= 800 %></td>
            </tr>

            <tr>
              <td>ご請求額</td>
              <td><%= @order.total_price + 800 %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <div>
    <div class= "col-xs-8">
      <div class="row">
        <strong>注文内容</strong>
      </div>
    <div class="row">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <% @order_details.each do |d| %>
        <tbody>
          <tr>
            <td><%= d.item.name %></td>
            <td><%= (d.item.price * 1.1).floor %></td>
            <td><%= d.amount %></td>
            <td><%= ((d.item.price * d.amount) * 1.1).floor %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>

</div>