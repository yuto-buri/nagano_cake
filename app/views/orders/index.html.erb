<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <!-- .strftime => created_atの表記を設定 -->
            <td>
            	<%= order.postal_code %><br>
            	<%= order.address %><br>
            	<%= order.name %>
            </td>
            <td><%= order.item %></td>
            <td><%= (order.total_price * 1.1).floor %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", customers_order(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>

   <!-- ページネーション -->

  <div class="container">
    <div class="row">
     <div class="col-md-4 offset-md-4 py-2  mt-5">
      <%= paginate @orders %>
     </div>
    </div>
  </div>