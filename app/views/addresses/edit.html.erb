<h2><span class="contents_title">配送先編集</span></h2>
<%= form_for(@address, url:customers_address_path(@address)) do |f| %>
	<div class = "form-group row">
			<div class = "col-lg-2">
				<p>郵便番号（ハイフンなし）</p>
			</div>
			<div class = "row">
				<div class="col-lg-3">
					<%= f.text_field :postal_code,  autofocus: true, class: "form-control" %>
				</div>
			</div>
		</div>
		<div class = "form-group row">
			<div class = "col-lg-2">
				<p>住所</p>
			</div>
			<div class = "row">
				<div class="col-lg-6">
					<%= f.text_field :delivery,  autofocus: true, class: "form-control" %>
				</div>
			</div>
		</div>
		<div class = "form-group row">
			<div class = "col-lg-2">
				<p>宛名</p>
			</div>
			<div class = "row">
				<div class="col-lg-3">
					<%= f.text_field :name,  autofocus: true, class: "form-control" %>
						<div class="col-lg-6", style="margin-left: 600px;">
		 					<%= f.submit '編集する', class:"btn btn-success btn-block" %>
		 				</div>
				</div>
			</div>
		</div>
<% end %>

