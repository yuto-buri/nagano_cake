<div class = "row">
	<h2>配送先登録/一覧</h2>
	<%= form_for(@address, url: customers_addresses_path) do |f| %>
		<div class = "form-group row">
			<div class = "col-lg-2">
				<p>郵便番号（ハイフンなし）</p>
			</div>
			<div class = "row">
				<div class="col-lg-3">
					<%= f.text_field :postal_code,  autofocus: true, class: "form-control" %>
				</div>
			</div>
		</div>
		<div class = "form-group row">
			<div class = "col-lg-2">
				<p>住所</p>
			</div>
			<div class = "row">
				<div class="col-lg-6">
					<%= f.text_field :delivery,  autofocus: true, class: "form-control" %>
				</div>
			</div>
		</div>
		<div class = "form-group row">
			<div class = "col-lg-2">
				<p>宛名</p>
			</div>
			<div class = "row">
				<div class="col-lg-3">
					<%= f.text_field :name,  autofocus: true, class: "form-control" %>
						<div class="col-lg-6", style="margin-left: 600px;">
		 					<%= f.submit '登録する', class:"btn btn-success btn-block" %>
		 				</div>
				</div>
			</div>
		</div>
	<% end %>
</div>

<table class = "table">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% @addresses.each do |address| %>
		<tr>
			<td><%= address.postal_code %></td>
			<td><%= address.delivery %></td>
			<td><%= address.name %></td>
			<td><%= link_to '編集する', edit_customers_address_path(address), class:"btn btn-primary" %>
			<%= link_to '削除する', customers_address_path(address), method: :delete, data: {confirm: "本当に消しますか" }, class:"btn btn-danger"%></td>
		<% end %>
		</tr>
	</tbody>
</table>

