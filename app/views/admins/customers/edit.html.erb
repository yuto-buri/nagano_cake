
	<div class="row">
    	<h2>
    		<span class="contents_title"><%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員情報編集</span>
    	</h2>
  </div>
  <%= form_with(model:@customer, url: admins_customer_path(@customer), local: true, class: 'container') do |f| %>

 	<div class="form-group row">
    	<div class="col-xs-2">
	    	<h5><%= f.label :会員ID %></h5>
		  </div>
	    <div class="col-xs-8">
	       <h5><%= @customer.id %></h5>
	    </div>
  </div>

    <div class="form-group row">
      <div class="col-xs-2 ">
        <h5><%= f.label :名前 %></h5>
      </div>
      <div class="col-xs-8">
        <div class="row">
          <div class="col-xs-3">
	        	<%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-xs-3">
          		<%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-2">
        <h5><%= f.label :フリガナ %></h5>
      </div>
      <div class="col-xs-8">
        <div class="row">
          <div class="col-xs-3">
            	<%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-xs-3">
				<%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-2">
        <h5><%= f.label :郵便番号 %></h5>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-2">
        <h5><%= f.label :住所 %></h5>
      </div>
      <div class="col-xs-8">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-2">
        <h5><%= f.label :電話番号 %></h5>
      </div>
      <div class="col-xs-3">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-xs-2">
        <h5><%= f.label :メールアドレス %></h5>
      </div>
      <div class="col-xs-3">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
    	<div class="col-xs-2">
        	<h5><%= f.label :会員ステータス %></h5>
    	</div>
      	<div class="col-xs-3">
	         <%= f.label :name, "有効" %>
	         <%= f.radio_button :is_deleted, :false %>
	         <%= f.label :name, "退会済み" %>
	         <%= f.radio_button :is_deleted, :true %>
	    </div>
    </div>

    <div class="row">
        <div class="col-xs-2 action">
          <%= f.submit "変更を保存する", class:"btn btn-primary btn-block" %>
        </div>
    </div>


<% end %>

