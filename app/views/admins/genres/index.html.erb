<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">

			<h2><span class="contents_title">ジャンル一覧・追加</span></h2>
			<br>
			<!-- error-message -->
			<% if @genre.errors.any? %>
			<div class="error_explanation genre-error">
				<h2><%= @genre.errors.count %> errors prohibited this obj from being saved:</h2>
				<ul>
				<% @genre.errors.full_messages.each do |message| %>
			    	<li><%= message %></li>
				<% end %>
				</ul>
		    </div>
			<% end %>
			<br>
			<!-- new genre form -->
			<div class="new-genre-form">
				<%= form_for(@genre, url:admins_genres_path(@genre)) do |f| %>
					<%= f.label :name, "ジャンル" %>
					<%= f.text_field :name %>
			        <%= f.label :name, "有効" %>
			        <%= f.radio_button :is_active, :true %>
			        <%= f.label :name, "無効" %>
			        <%= f.radio_button :is_active, :false %>
					<%= f.submit '追加', class:"btn btn-info" %>
				<% end %>
			</div>
			<br>
			<!-- genre index -->
			<table class="table genre-index">
				<thead class="contents_title">
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<% if genre.is_active == true %>
						<td><%= "有効" %></td>
						<% else %>
						<td><%= "無効" %></td>
						<% end %>
						<td><%= link_to '編集する', edit_admins_genre_path(genre.id), class:"btn btn-primary" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>