<div class="row">
  <h2><span class="contents_title">商品詳細</span></h2>
</div>

<div class="col-sm-4">
  <%= attachment_image_tag @item, :image, :fill, 200, 200, format: "jpeg", fallback: 'no_image.jpg', size: '200x200' %>
</div>

<div class="col-sm-4">
  <table class="table table-borderless">
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>

      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>

      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>

      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</td>
      </tr>

      <tr>
        <td>販売ステータス</td>
        <td><%= @item.is_active ? "販売中" : "販売停止中" %></td>
      </tr>
    </tbody>
  </table>
</div>


<div class="col-sm-4 text-center" style="margin-top: 200px;">
  <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary" %>
</div>