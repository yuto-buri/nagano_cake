<div class="row">
  <h2><span class="contents_title">商品新規登録</span></h2>
</div>

<%= form_for(@item, url: admins_items_path) do |f| %>

<div class="row">
  <div class="col-sm-4">
    <%= f.label :商品画像 %>
    <%= f.attachment_field :image %>
  </div>

  <div class="col-sm-4">
    <table class="table table-borderless">
      <div class="form-group row">
        <%= f.label :商品名, class: "col-sm-4" %>
        <%= f.text_field :name, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :商品説明, class: "col-sm-4" %>
        <%= f.text_area :introduction, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :ジャンル, class: "col-sm-4" %>
        <%= f.collection_select :genre_id, Genre.where(is_active: true), :id, :name, class: "form-control col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :税抜価格, class: "col-sm-4" %>
        <%= f.text_field :price, class: "form-control col-sm-7" %>
        <span class="mt-auto ml-3">円</span>
      </div>

      <div class="form-group row">
        <%= f.label :販売ステータス, class: "col-sm-4" %>
        <%= f.select :is_active, [["販売中",true] , ["販売停止中",false]], class: "form-control col-sm-8" %>
      </div>
    </table>
  </div>

  <div class="col-sm-4 text-center" style="margin-top: 300px;">
    <%= f.submit :新規登録, class: "btn btn-primary" %>
  </div>
</div>

<% end %>