<div class="row">
  <h2><span class="contents_title">商品一覧</span></h2>
</div>

<div class="row text-right">
  <%= link_to "+", new_admins_item_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
</div>

<div class="row">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admins_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? "販売中" : "売切れ" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 py-2  mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>