<div class="row">
    <h2>商品一覧画面</h2>
  </div>
  <div class="row text-right">
    <%= link_to "+", new_admins_item_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class="row">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admins_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
            <td><%= "販売中" %></td>
              <% else %>
            <td><%= "販売停止中" %></td>
              <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="container">
  <div class="row">
   <div class="col-md-4 offset-md-4 py-2  mt-5">
    <%= paginate @items %>
   </div>
  </div>
</div>